<script>
    $(document).ready(function () {
        var table = $("#mainDatatable").DataTable({
            "dom": '<"toolbar">lfrtip',
            "processing": true,
            "serverSide": true,
            "filter": true,
            "responsive": false,
            "scrollX": true,
            "scrollCollapse": true,
            "order": [[0, "desc"]],
            "ajax": {
                "url": "/Admin/GetCommentList",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                "targets": [0, 1, 2],
                "visible": false,
                "searchable": false
            }],
            "columns": [

                { "data": "id", "name": "Id", "autoWidth": true },
                { "data": "isActive", "name": "Id", "autoWidth": true },
                { "data": "isChecked", "name": "IsChecked", "autoWidth": true },
                { "data": "userName", "name": "UserName", "autoWidth": true },
                { "data": "text", "name": "Text", "autoWidth": true },
                { "data": "feedbackDTO.title", "name": "FeedbackTitle", "autoWidth": true },
                {
                    "data": {id : "id", isChecked : "isChecked"},
                    "searchable": false,
                    "sortable": false,
                    "render": function (data, type, full, meta)
                    {
                        if (data.isChecked) {
                            return '<a href="javascript:void(0);" data-id="' + data.id + '" class="btn btn-relief-success" onclick="itemCheck($(this))"><i class="fas fa-check"></i></a>';
                        } else {
                            return '<a href="javascript:void(0);" data-id="' + data.id + '" class="btn btn-outline-success" onclick="itemCheck($(this))"><i class="fas fa-check"></i></a>';
                        }

                    }
                },
                {
                    "data": {id : "id", isActive : "isActive"},
                    "searchable": false,
                    "sortable": false,
                    "render": function (data, type, full, meta)
                    {
                        if (data.isActive) {
                            return '<a href="javascript:void(0);" data-id="' + data.id + '" class="btn btn-outline-danger" onclick="itemSil($(this))"><i class="fas fa-trash-alt"></i></a>';
                        } else {
                            return '<a href="javascript:void(0);" data-id="' + data.id + '" class="btn btn-relief-danger" onclick="itemSil($(this))"><i class="fas fa-trash-alt"></i></a>';
                        }

                    }
                }

            ],

            "language": {
                "sDecimal": ",",
                "sEmptyTable": "Tabloda herhangi bir veri mevcut değil",

                "sInfo": "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                "sInfoEmpty": "Kayıt yok",
                "sInfoFiltered": "(_MAX_ kayıt içerisinden bulunan)",
                "sInfoPostFix": "",
                "sInfoThousands": ".",
                "sLengthMenu": "Sayfada _MENU_ kayıt göster",
                "sLoadingRecords": "Yükleniyor...",
                "sProcessing": "İşleniyor...",
                "sSearch": "Ara:",
                "sZeroRecords": "Eşleşen kayıt bulunamadı",
                "oPaginate": {
                    "sFirst": "İlk",
                    "sLast": "Son",
                    "sNext": "Sonraki",
                    "sPrevious": "Önceki"
                },
                "oAria": {
                    "sSortAscending": ": artan sütun sıralamasını aktifleştir",
                    "sSortDescending": ": azalan sütun sıralamasını aktifleştir"
                },
                "select": {
                    "rows": {
                        "_": "%d kayıt seçildi",
                        "0": "",
                        "1": "1 kayıt seçildi"
                    }
                }
            }
        });

        $('div.toolbar').html('<div class="row">\r\n<div class="col-md-6 col-12">\r\n<div class="mb-1">\r\n<select class="form-control" id="isActiveSearch" name="isActiveSearch">\r\n<option value="">---Aktiflik Durumu---</option>\r\n<option value="true">Aktif</option>\r\n<option value="false">Pasif</option>\r\n</select>\r\n</div>\r\n</div>\r\n<div class="col-md-6 col-12">\r\n<div class="mb-1">\r\n<select class="form-control" id="isCheckedSearch" name="isCheckedSearch">\r\n<option value="">---Kontrol Durumu---</option>\r\n<option value="true">Onaylanmış</option>\r\n<option value="false">Onaylanmamış</option>\r\n</select>\r\n</div>\r\n</div>\r\n</div>' 
        
        );

        $('#isActiveSearch').on( 'change', function () {
            table
                .columns( 1 )
                .search( this.value )
                .draw();
        } );

        $('#isCheckedSearch').on( 'change', function () {
            table
                .columns( 2 )
                .search( this.value )
                .draw();
        } );

    });

</script>

<script>
    function itemCheck(item)
    {
        var ctrl = item;
            $.ajax({
                url: '@Url.Action("CheckComment")/' + ctrl.data('id'),
                type: 'POST',
                data: { id: ctrl.data('id') }
            }).done(function(data) {
                if (data.result === "OK") {
                    $('#mainDatatable').DataTable().ajax.reload(null, false);
                } else if (data.Result.Message) {
                    alert(data.Result.Message);
                }
            }).fail(function() {
                alert("Bir Hata Oluştu. Lütfen Sistem Yöneticisiyle İletişime Geçiniz.");
            });


    }
</script>

<script>
    function itemSil(item)
    {
         var ctrl = item;
         if (confirm('Bu kaydın aktiflik durumunu değiştirmek istediğinizden emin misiniz?')) {
             $.ajax({
                 url: '@Url.Action("DeleteComment")/' + ctrl.data('id'),
                 type: 'POST',
                 data: { id: ctrl.data('id') }
             }).done(function(data) {
                 if (data.result === "OK") {
                     $('#mainDatatable').DataTable().ajax.reload(null, false);
                 } else if (data.Result.Message) {
                     alert(data.Result.Message);
                 }
             }).fail(function() {
                 alert("Bir Hata Oluştu. Lütfen Sistem Yöneticisiyle İletişime Geçiniz.");
             });

         }
     }
</script>

}
