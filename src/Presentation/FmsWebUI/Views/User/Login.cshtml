@model ApplicationFMS.Handlers.Account.Queries.UserLogin.UserLoginQuery


@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
<div class="d-flex col-lg-4 align-items-center auth-bg px-2 p-lg-5">
    <div class="col-12 col-sm-8 col-md-6 col-lg-12 px-xl-2 mx-auto">
        <h2 class="card-title fw-bold mb-1">FMS Sistemine Hoşgeldiniz!</h2>
        <p class="card-text mb-2"></p>

        <form class="form" enctype="application/json" asp-controller="User" asp-action="Login" method="POST" novalidate="novalidate">
            <div class="mb-1">
                <label class="form-label" for="login-email">Email</label>
                <input asp-for="Email" class="form-control" type="text"  placeholder="john@example.com" >
            </div>

            <div class="mb-1">
                <div class="d-flex justify-content-between">
                    <label class="form-label" for="login-password">Parola</label>

                </div>
                <div class="input-group">
                    <input asp-for="Password" class="form-control"  type="password"  placeholder="············" >

                </div>
            </div>
            <div class="mb-1">

            </div>
            <button class="btn btn-primary w-100 waves-effect waves-float waves-light" tabindex="4">Giriş Yap</button>
        </form>
        <p class="text-center mt-2"><span>Henüz bir FMS hesabınız yok mu?</span><a asp-action="Register"><span>Hemen yeni bir hesap oluşturun!</span></a></p>
    </div>
</div>
</div>
